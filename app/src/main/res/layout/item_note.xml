<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:padding="@dimen/default_margin">

    <TextView
        android:id="@+id/item_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Title"
        android:textColor="@color/black"
        android:textSize="@dimen/note_title_text_size"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/item_content_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/half_margin"
        tools:text="subscription"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/note_content_text_size" />

    <TextView
        android:id="@+id/item_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        tools:text="date" />

</LinearLayout>