<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_margin"
    android:background="@color/blue_50"
    tools:context=".ui.NoteEditFragment">

    <EditText
        android:id="@+id/note_title_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/title_hint"
        android:textSize="@dimen/note_title_text_size"
        android:gravity="center" />


    <EditText
        android:id="@+id/note_content_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/content_hint"
        android:textSize="@dimen/note_content_text_size"
        android:gravity="start" />

    <TextView
        android:id="@+id/note_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/note_button_save_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_text_button"
        android:textSize="@dimen/note_content_text_size"/>

</LinearLayout>